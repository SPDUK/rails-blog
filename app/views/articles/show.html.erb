<h2 align="center">Title: <%= @article.title %></h2>
<div class="card bg-light col-sm-8 offset-sm-2 article">
  <h4 align="center" class="card-header"><strong>Description:</strong></h4>
  <div class="container">
    <%= simple_format(@article.description) %>
    <div class="article-actions">
      <%= link_to "Back to all articles", articles_path, :class => "btn-primary btn-sm" %>
      <%= link_to "Edit", edit_article_path(@article), :class => "btn btn-success btn-sm"%>
      <%= link_to "Delete",
          article_path(@article),
          method: :delete,
          data: {confirm: "Are you sure you want to delete this article?"},
          :class => "btn btn-danger btn-sm"%>

    </div>
  </div>
</div>

