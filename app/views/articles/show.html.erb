<h2 align="center">Title: <%= @article.title %></h2>
<!--TODO: fix the back button being too small?-->
<div class="centered">
  <div class="card bg-light article">
    <h4 align="center" class="card-header"><strong>Description</strong></h4>
    <div class="card-body">
      <%= simple_format(@article.description) %>
      <div class="article-actions">
        <%= link_to "Back to all articles", articles_path, :class => "btn" %>
        <%= link_to "Edit", edit_article_path(@article), :class => "btn btn-info btn-sm" %>
        <%= link_to "Delete",
                    article_path(@article),
                    method: :delete,
                    data: {confirm: "Are you sure you want to delete this article?"},
                    :class => "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
</div>
