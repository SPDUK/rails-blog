<h1 align="center">All articles</h1>
<%= link_to "Create a new article", new_article_path, :class => "btn btn-primary" %>

<div class="container">
  <% @articles.each do |article| %>
  <div class="row">
    <div class="article col-sm-8 offset-sm-2">
      <div class="card article-card">
        <div class="article-title">
          <strong><%= link_to article.title, article_path(article) %></strong>
        </div>
        <div class="article-body">
          <%= truncate(article.description, length: 40) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(article), :class => "btn btn-success btn-sm"%>
          <%= link_to "Delete this article",
              article_path(article),
              method: :delete,
              data: {confirm: "Are you sure you want to delete this article?"},
              :class => "btn btn-danger btn-sm"%>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>