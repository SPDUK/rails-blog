<h1> listing all articles</h1>
<%= link_to "Create a new article", new_article_path, :class => "btn btn-primary" %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td>
        <%= article.title %>
      </td>
      <td><%= article.description %></td>
      <td><%= link_to "Edit", edit_article_path(article), :class => "btn btn-small" %></td>
      <td><%= link_to "Show", article_path(article), :class => "btn btn-small" %></td>
    </tr>
  <% end %>
</table>