<% if @article.errors.any? %>
<div id="form-alerts">
    <div class="alert alert-danger">
      <div class="alert-heading">
        <h2>
          <% pluralize(@article.errors.count, "error")%>
          This article could not be saved!
        </h2>
        <div class="mb-0">
          <ul>
           <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg%></li>
            <% end%>
          </ul>
        </div>
      </div>
    </div>
  </div> 
<% end %>


<div class="container" id="form">
  <%= form_for @article do |f| %> 
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder:"Enter a title", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", placeholder:"Enter a description" %>
    </div>
    <div class="form-group form-buttons">
      <%= link_to "Back to All Articles", articles_path, class: "btn"%>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>






