<h1 align="center">Create new category</h1>

<%# @category comes from categories controller %>
<%= render partial: 'shared/errors', locals: {obj: @category} %>
<div class="container" id="form">
  <%= form_for @category do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
    <div class="form-group form-buttons">
      <%= link_to "Back to All Articles", articles_path, class: "btn" %>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
